<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" alignment="center" hgap="10" minHeight="600.0" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.javafx.view.MainWindowFxController">
   <rowConstraints>
      <RowConstraints minHeight="400.0" valignment="TOP" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints maxWidth="1.7976931348623157E308" prefWidth="400.0" />
   </columnConstraints>
   <children>
      <ListView fx:id="messagesListView" maxWidth="1.7976931348623157E308" minHeight="300.0" prefHeight="300.0" prefWidth="200.0" GridPane.hgrow="ALWAYS">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </ListView>
      <HBox maxWidth="1.7976931348623157E308" spacing="5.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="chatInputField" maxWidth="1.7976931348623157E308" onAction="#sendMessage" HBox.hgrow="ALWAYS" />
            <Button maxWidth="80.0" minWidth="80.0" mnemonicParsing="false" onAction="#sendMessage" prefWidth="80.0" text="Send" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</GridPane>
