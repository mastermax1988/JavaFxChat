<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.javafx.view.MainWindowFxController">
   <rowConstraints>
      <RowConstraints valignment="TOP" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" prefWidth="400.0" />
   </columnConstraints>
   <children>
      <ListView fx:id="messagesListView" minHeight="400.0" prefHeight="400.0" prefWidth="200.0" />
      <HBox spacing="5.0" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="chatInputField" onAction="#sendMessage" prefWidth="400.0" />
            <Button minWidth="50.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</GridPane>
